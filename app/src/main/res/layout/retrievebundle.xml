<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/tvquestionis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="50dp"
        android:text="Ravi is..."
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/rgoptions"
        app:layout_constraintEnd_toEndOf="@+id/rgoptions"
        app:layout_constraintStart_toStartOf="@+id/rgoptions"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rgoptions"
        android:layout_width="0dp"
        android:layout_height="89dp"
        android:layout_marginBottom="29dp"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="43dp"
        app:layout_constraintBottom_toTopOf="@+id/tvansweris"
        app:layout_constraintEnd_toStartOf="@+id/breturn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvquestionis">

        <RadioButton
            android:id="@+id/rbCrazy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crazy"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbSexy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexy"
            android:textStyle="bold|italic" />

        <RadioButton
            android:id="@+id/rbBoth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Both"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold|italic" />
    </RadioGroup>

    <TextView
        android:id="@+id/tvansweris"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="240dp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rgoptions"
        app:layout_constraintStart_toStartOf="@+id/rgoptions"
        app:layout_constraintTop_toBottomOf="@+id/rgoptions" />

    <Button
        android:id="@+id/breturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="31dp"
        android:text="Return"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/rgoptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rgoptions"
        app:layout_constraintTop_toBottomOf="@+id/tvquestionis" />

</android.support.constraint.ConstraintLayout>