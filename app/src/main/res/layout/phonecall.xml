<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/etphonecall"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="165dp"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:hint="Enter Contact Number :"
        android:inputType="text|number"
        android:lineSpacingExtra="8sp"
        android:textColor="@android:color/holo_red_light"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/bcalltoravi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bcall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:background="@android:drawable/stat_sys_phone_call_on_hold"
        android:backgroundTint="@android:color/holo_green_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bcalltoravi"
        app:layout_constraintTop_toTopOf="@+id/bcalltoravi" />

    <Button
        android:id="@+id/bcalltoravi"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginBottom="183dp"
        android:layout_marginEnd="62dp"
        android:layout_marginStart="41dp"
        android:background="@android:color/holo_red_light"
        android:text="Call To Ravi"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bcall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etphonecall" />
</android.support.constraint.ConstraintLayout>